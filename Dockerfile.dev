FROM ruby:3.4.6-slim
# Set working directory
WORKDIR /rails
# Install dependencies
RUN apt-get update -qq && apt-get install -y \
    build-essential libpq-dev nodejs \
    libyaml-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy only Gemfile and Gemfile.lock first (for better caching)
COPY Gemfile Gemfile.lock ./

# Copy the entire app (including your CSV)
COPY . .

# Install gems
RUN bundle install

# Don't copy the entire app - let the volume mount handle it
# The volume mount in compose.dev.yaml will provide the app code

# Default command
CMD ["bin/rails", "server", "-b", "0.0.0.0"]
