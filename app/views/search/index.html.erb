<div class="container-fluid py-5" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-12 text-center mb-4">
            <h1 class="fw-bold" style="color: #000;">Start your planning journey today</h1>
        </div>
        <div class="col-12 col-md-8 col-lg-6 mx-auto" style="margin-top: 32px;">
            <%= form_with url: courses_query_path, method: :get do |form| %>
            <div class="input-group rounded">
                <%= form.search_field :degree, class: "form-control border-end-0 px-3 py-3", placeholder: "Search for courses...", style: "color: #6c757d;" %>
                <button class="btn btn-primary d-flex align-items-center" type="submit" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            <% end %>

            <!-- quick access links -->
            <div class="row mt-4 g-2 justify-content-center">
                <div class="col-4 col-md-3">
                    <%= link_to root_path, class: "text-decoration-none quick-link" do %>
                    <div class="text-center p-3 rounded" style="transition: all 0.3s;">
                        <i class="bi bi-bookmark" style="font-size: 56px; color: #6c757d;"></i>
                        <!-- placeholder icons for now, to be changed to nicer (custom?) icons -->
                        <p class="mt-2 mb-0 text-dark">Bookmarks</p>
                    </div>
                    <% end %>
                </div>
                <div class="col-4 col-md-3">
                    <%= link_to courses_query_path, class: "text-decoration-none quick-link" do %>
                    <div class="text-center p-3 rounded" style="transition: all 0.3s;">
                        <i class="bi bi-book" style="font-size: 56px; color: #6c757d;"></i>
                        <p class="mt-2 mb-0 text-dark">View Courses</p>
                    </div>
                    <% end %>
                </div>
                <div class="col-4 col-md-3">
                    <%= link_to users_path, class: "text-decoration-none quick-link" do %>
                    <div class="text-center p-3 rounded" style="transition: all 0.3s;">
                        <i class="bi bi-person-fill" style="font-size: 56px; color: #6c757d;"></i>
                        <p class="mt-2 mb-0 text-dark">Update Profile</p>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>