<div class="container-fluid py-4">
  <!-- Top bar spacing matches your navbar -->
  <div class="row gx-4">
    <!-- Sidebar -->
    <aside class="col-12 col-lg-3 mb-4 mb-lg-0">
      <div class="card shadow-sm border-0 sticky-top" style="top: 88px;">
        <div class="card-body">
          <h5 class="fw-semibold mb-3">Filters</h5>

          <p class="text-muted mb-2 small">Select fields to display</p>
          <div class="list-group list-group-flush mb-3" id="fieldFilters">
            <% [
              "Course Duration",
              "Intake Size",
              "Overall Employment Rate",
              "Full-time Permanent Employment Rate",
              "Mean Gross Monthly Salary (S$)",
              "Median Gross Monthly Salary (S$)",
              "Mean Basic Monthly Salary (S$)",
              "Median Basic Monthly Salary (S$)"
            ].each_with_index do |label, i| %>
              <label class="list-group-item d-flex align-items-center gap-2">
                <input class="form-check-input me-1" type="checkbox" value="<%= label %>" <%= i==2 ? 'checked' : '' %> />
                <span><%= label %></span>
              </label>
            <% end %>
          </div>

          <div class="mb-3">
            <label class="form-label">Academic Year</label>
            <select class="form-select">
              <option selected>AY2025</option>
              <option>AY2024</option>
              <option>AY2023</option>
            </select>
          </div>

          <!-- Course selector -->
          <div class="mb-2 d-flex align-items-center justify-content-between">
            <label class="form-label m-0">Select courses</label>
            <button class="btn btn-link p-0 small" id="clearCourses" type="button">Clear</button>
          </div>

          <div class="dropdown w-100">
            <button class="form-control d-flex justify-content-between align-items-center" data-bs-toggle="dropdown" type="button" aria-expanded="false">
              <span id="selectedCourseChips" class="d-flex flex-wrap gap-1"></span>
              <span class="ms-auto text-muted"><i class="bi bi-chevron-down"></i></span>
            </button>

            <div class="dropdown-menu p-0 w-100 shadow rounded-3 overflow-hidden">
              <div class="p-2 border-bottom small text-muted">Bookmarks</div>
              <div class="list-group list-group-flush" style="max-height: 260px; overflow:auto;">
                <% bookmarks = [
                  { id: "ntu-cs", name: "NTU, Bachelor of Computing (Hons) in Computer Science" },
                  { id: "nus-cs", name: "NUS, Bachelor of Computing in Computer Science (with Honours*)" },
                  { id: "sit-sci", name: "SIT, Bachelor of Science with Honours in Information Security" }
                ] %>

                <% bookmarks.each do |b| %>
                  <label class="list-group-item d-flex align-items-center gap-2">
                    <input class="form-check-input me-1 course-option" type="checkbox" value="<%= b[:id] %>" />
                    <span><%= b[:name] %></span>
                  </label>
                <% end %>
              </div>
            </div>
          </div>

          <div class="form-text mt-2">Pick 2–3 courses to compare later.</div>
        </div>
      </div>
    </aside>

    <!-- Main canvas -->
    <main class="col-12 col-lg-9">
      <div class="comparison-canvas d-flex align-items-center justify-content-center text-muted">
        <div class="text-center">
          <div class="mb-2"><i class="bi bi-columns-gap fs-2"></i></div>
          <div class="fw-semibold">No Courses Selected</div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Page-scoped styles -->
<style>
  .comparison-canvas{
    min-height: 64vh;
    border: 2px dashed #e2e8f0;
    border-radius: .75rem;
    background: #fafbfc;
  }
  /* Pills inside “Select courses” control */
  .course-pill{
    display:inline-flex; align-items:center; gap:.25rem;
    border-radius:999px; padding:.125rem .5rem; font-size:.8rem;
    background:#e7f1ff; border:1px solid #d0e4ff;
  }
  .course-pill .remove{ cursor:pointer; }
  /* Make chips visible even when none selected */
  #selectedCourseChips:empty::before{
    content:"Select courses";
    color:#6c757d;
  }
</style>

<!-- Lightweight behavior for chips + clear -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const chipWrap = document.getElementById("selectedCourseChips");
    const options = document.querySelectorAll(".course-option");
    const clearBtn = document.getElementById("clearCourses");

    function renderChips(){
      chipWrap.innerHTML = "";
      options.forEach(opt => {
        if(opt.checked){
          const pill = document.createElement("span");
          pill.className = "course-pill";
          pill.dataset.value = opt.value;
          pill.innerHTML = `<span>${opt.dataset.label.split(",")[0]}</span>
                            <span class="remove" aria-label="Remove">&times;</span>`;
          pill.querySelector(".remove").addEventListener("click", (e) => {
            e.stopPropagation();
            opt.checked = false;
            renderChips();
          });
          chipWrap.appendChild(pill);
        }
      });
    }

    options.forEach(opt => opt.addEventListener("change", renderChips));
    clearBtn.addEventListener("click", () => { options.forEach(o => o.checked = false); renderChips(); });
    renderChips();
  });
</script>

