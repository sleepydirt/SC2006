<div class="container-lg">
  <div class="row justify-content-center align-items-center" style="height: 85vh; margin-top: 0;">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card border-0 bg-transparent">
        <div class="card-body p-4 p-md-5">

          <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

          <%= form_with url: session_path do |form| %>
            <div class="mb-4">
              <label for="email_address" class="form-label fw-bold fs-6">Email address</label>
              <%= form.email_field :email_address, 
                                    required: true, 
                                    autocomplete: "username", 
                                    placeholder: "Enter your email address", 
                                    value: params[:email_address],
                                    class: "form-control form-control-md py-3 rounded-4 bg-transparent",
                                    id: "email_address" %>
            </div>

            <div class="mb-2">
              <label for="password" class="form-label fw-bold fs-6">Password</label>
              <%= form.password_field :password, 
                  required: true, 
                  autocomplete: "current-password", 
                  placeholder: "Enter your password", 
                  maxlength: 72,
                  class: "form-control form-control-md py-3 rounded-4 bg-transparent",
                  id: "password" %>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <% if flash[:alert] %>
                    <span class="text-danger small">Wrong email or password!</span>
                <% else %>
                    <span></span>
                <% end %>
                <%= link_to "Forgot password?", new_password_path, class: "text-primary text-decoration-none fw-semibold" %>
            </div>

            <%= form.submit "Continue", class: "btn btn-primary w-100 py-3 mb-4 fw-semibold fs-6 rounded-4" %>
          <% end %>

          <div class="position-relative mb-4">
              <hr class="text-muted">
              <span class="position-absolute top-50 start-50 translate-middle px-3 bg-light text-muted">Or</span>
          </div>

          <div class="text-center">
              <span class="text-muted">Don't have an account?</span>
              <%= link_to "Sign up", new_user_path, class: "text-primary text-decoration-none fw-semibold ms-1" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>